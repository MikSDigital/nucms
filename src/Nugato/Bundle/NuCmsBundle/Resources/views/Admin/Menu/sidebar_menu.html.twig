{% extends 'knp_menu.html.twig' %}

{% block list %}

    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        {% import _self as knp_menu %}

        {% if item.level > 0 %}
            {% set class = 'uk-nav-sub' %}
        {% else %}
            {% set class = 'uk-nav uk-nav-default' %}
        {% endif %}

        <ul class="{{ class }}">
            {{ block('children') }}
        </ul>
    {% endif %}

{% endblock %}

{% block item %}

    {% import _self as knp_menu %}

    {% set class = '' %}
    {%- if matcher.isCurrent(item) %}
        {%- set class = class ~ 'uk-active ' %}
    {%- endif %}
    {% if item.hasChildren and options.depth is not same as(0) and item.displayChildren %}
        {%- set class = class ~ 'uk-parent' %}
    {%- endif %}

    <li {% if class is not empty %}class="{{ class }}{% endif %}">
        {%- if item.uri is not empty and (not matcher.isCurrent(item) or options.currentAsLink) %}
            {{ block('linkElement') }}
        {%- else %}
            {{ block('spanElement') }}
        {%- endif %}
        {{ block('list') }}
    </li>

{% endblock %}

{% block linkElement %}{% import _self as knp_menu %}
    <a href="{{ item.uri }}">{{ block('icon') }}{{ item.label|trans }}</a>{% endblock %}

{% block spanElement %}{% import _self as knp_menu %}
    <span>{{ block('icon') }}{{ item.label|trans }}</span>{% endblock %}

{% block icon %}

    {% set icon = item.getExtra('icon', false) %}
    {% if icon %}<span class="uk-margin-small-right" uk-icon="icon: {{ icon|raw }}"></span> {% endif %}

{% endblock %}